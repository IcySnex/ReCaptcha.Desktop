<UserControl
    x:Class="ReCaptcha.Desktop.Sample.WPF.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReCaptcha.Desktop.Sample.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Image Height="60" Source="../Icon.png" />

        <TextBlock
            Margin="12,0"
            FontSize="30"
            FontWeight="SemiBold"
            Text="Welcome to Google reCAPTCHA on Desktop!"
            TextAlignment="Center"
            TextDecorations="Underline"
            TextWrapping="Wrap" />
        <TextBlock
            Margin="12,0"
            FontSize="20"
            Opacity="0.5"
            TextAlignment="Center"
            TextWrapping="Wrap">
            This is an example application based on WPF with MVVM/Dependency Inection.<LineBreak />
            This is an open source library and is not affiliated with Google in any way.</TextBlock>

        <Button
            Width="150"
            Height="50"
            Margin="0,24,0,0"
            Command="{Binding NavigateToCaptchaCommand}"
            Content="Lets get started!" />
    </StackPanel>
</UserControl>
